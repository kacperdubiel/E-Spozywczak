@model E_Spożywczak.Models.Product

    <div style="display:grid">
        <div style="border-style:groove; border-radius:10px; padding:10px; vertical-align:top">
            <div style="float: left; padding:10px">
                @{
                    string img_path = Model.ImagePath == null ? "/image/no_image.jpg" : "/image/" + Model.ImagePath;
                }

                <img src="@Url.Content(img_path)" style="max-height: 120px; max-width: 120px; height: auto; width: auto;" />
            </div>
            <div style="float:left; padding:10px">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Price) zł.
                    </dd>
                </dl>
            </div>
        </div>
        <div style="vertical-align:bottom">
            <link rel="stylesheet" href="~/css/rating_bar.css">
            <br>
            <h2>Twoja opinia</h2>
            <hr />
            <h4>Ocena</h4>
            <form method="post">
                <fieldset class="rate">
                    <input type="radio" id="rating10" name="rating" value="10" /><label for="rating10" title="5 gwiazdek"></label>
                    <input type="radio" id="rating9" name="rating" value="9" /><label class="half" for="rating9" title="4,5 gwiazdki"></label>
                    <input type="radio" id="rating8" name="rating" value="8" /><label for="rating8" title="3 gwiazdki"></label>
                    <input type="radio" id="rating7" name="rating" value="7" /><label class="half" for="rating7" title="3,5 gwiazdki"></label>
                    <input type="radio" id="rating6" name="rating" value="6" /><label for="rating6" title="3 gwiazdki"></label>
                    <input type="radio" id="rating5" name="rating" value="5" /><label class="half" for="rating5" title="2,5 gwiazdki"></label>
                    <input type="radio" id="rating4" name="rating" value="4" /><label for="rating4" title="2 gwiazdki"></label>
                    <input type="radio" id="rating3" name="rating" value="3" /><label class="half" for="rating3" title="1,5 gwiazdki"></label>
                    <input type="radio" id="rating2" name="rating" value="2" /><label for="rating2" title="1 gwiazdka"></label>
                    <input type="radio" id="rating1" name="rating" value="1" /><label class="half" for="rating1" title="0,5 gwiazdki"></label>
                    <input type="radio" id="rating0" name="rating" value="0" /><label for="rating0" title="No star"></label>
                </fieldset>
                <h4>Komentarz</h4>
                <!--<input type="text" id="comment" name="comment" maxlength="250" style="width:600px; height:200px"><br><br>-->
                <textarea rows="7" cols="100" name="message"></textarea>
                <hr />
                <a type="submit" asp-controller="Rating" asp-action="Rate" asp-route-id="@Model.Id" class="btn btn-success">Oceń</a>
            </form>
            <a asp-controller="OrdersHistory" asp-action="Index" class="btn btn-success">Powrót</a>
        </div>
    </div>
