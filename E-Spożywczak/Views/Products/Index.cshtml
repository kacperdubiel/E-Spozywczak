@model IEnumerable<E_Spożywczak.Models.Product>

@{
    ViewData["Title"] = "Produkty";
}

<div id="products_page">
    <form asp-action="Filter" asp-route-categoryid="@ViewBag.SelectedProductCategory">
        <div id="products_top_menu">
            <input type="text" id="products_search_box" name="searchbox" placeholder="Szukaj..." value="@ViewBag.SearchBoxText">
            <select class="form-select" name="sortby" asp-items="@ViewBag.SortByList"> </select>
            <input type="submit" value="Filtruj" class="btn btn-primary" />
        </div>
    </form>

    <div id="products_left_menu">
        <a id="products_category_btn" class="btn btn-primary" asp-action="Filter" asp-route-categoryid="-1" 
           asp-route-searchbox="@ViewBag.SearchBoxText" asp-route-sortby="@ViewBag.SelectedSortItem">
            Wszystkie
        </a>
        @foreach (var c in ViewBag.ProductCategories)
        {
            <a id="products_category_btn" class="btn btn-primary" asp-action="Filter" asp-route-categoryid="@c.Id" 
               asp-route-searchbox="@ViewBag.SearchBoxText" asp-route-sortby="@ViewBag.SelectedSortItem">
                @c.Name
            </a>
        }
    </div>

    <div id="products_list">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImagePath)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Availability)
                    </th>
                    <th>
                        Opcje
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price) zł
                        </td>
                        <td>
                            @{
                                string img_path = item.ImagePath == null ? "/image/no_image.jpg" : "/image/" + item.ImagePath;
                            }

                            <img src="@Url.Content(img_path)" style="max-height: 75px; max-width: 75px; height: auto; width: auto;" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Availability) @Html.DisplayFor(modelItem => item.MeasureType)
                        </td>
                        <td>
                            <a asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-danger">Dodaj do koszyka</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div id="float_clear"></div>

    
</div>